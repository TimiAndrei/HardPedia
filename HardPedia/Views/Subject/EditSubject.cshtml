@model HardPedia.Models.Domain.Subject

@{
    ViewData["Title"] = "Edit Subject";
}

<h2>Edit Subject</h2>

<form asp-action="EditSubject" asp-controller="Subject" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Heading"></label>
        <input asp-for="Heading" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <!-- Apply CSS class to set height and width -->
        <textarea asp-for="Content" class="form-control textarea-resize"></textarea>
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        &nbsp;
        <button type="button" class="btn btn-secondary" onclick="history.back()">Cancel</button>
    </div>
</form>