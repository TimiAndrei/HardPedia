@model IEnumerable<HardPedia.Models.ViewModels.CategorySubjectsViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>Categories</h1>
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@category.CategoryName</h5>
                        <p class="card-text">@category.CategoryDescription</p>
                        <ul class="list-group list-group-flush">
                            @foreach (var subject in category.Subjects)
                            {
                                <li class="list-group-item">@subject.Title</li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                @for (int i = 1; i <= category.TotalPages; i++)
                                {
                                    <li class="page-item @(i == category.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
